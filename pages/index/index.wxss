
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.uploader {
    margin-top: 20rpx;
    width: 94%;
    height: auto;
    padding: 0 0 0 20rpx;
    box-sizing: border-box;
    background: #FFF;
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.uploader-text {
    width: 100%;
    line-height: 36px;
    font-size: 34rpx;
    color: #666666;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.banner {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}


.banner .image {
    width: 100%;
    height: 160rpx;
}



